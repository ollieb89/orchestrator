# Application Configuration
GRID_CLUSTER_NAME="my-grid"
GRID_LOG_LEVEL="INFO"
GRID_LOG_FORMAT="json"

# SSH Configuration
GRID_SSH_TIMEOUT=30
GRID_SSH_CONNECT_TIMEOUT=10

# Execution Configuration
GRID_DEFAULT_NODES=1
GRID_DEFAULT_GPUS_PER_NODE=1
GRID_TIMEOUT_SECONDS=3600
GRID_RETRY_ATTEMPTS=3
GRID_WORKING_DIRECTORY="/tmp/grid"

# Metrics Configuration
GRID_METRICS_PORT=8000
GRID_METRICS_ENABLED=true

# Ray Configuration
RAY_ADDRESS="auto"
RAY_NAMESPACE="grid"
RAY_NUM_CPUS=1
RAY_NUM_GPUS=0

# Security
GRID_SECRET_KEY="your-secret-key-here"
GRID_TOKEN_EXPIRE_MINUTES=30
